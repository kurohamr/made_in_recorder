<h1 class=post-index-title>#<%= params[:name] %></h1>

  <div class="row">
    <div class="post-index-area col-md-9 col-md-offset-1">
      <div class="row">
        <% @posts.where(user_id: current_user.id).each do |post| %>
          <%= link_to post_path(post.id) do %>
            <p class="index-image-area col-md-3"><%= image_tag(post.asset.image.url, id: "post-image-index", size: "250x250") %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
