  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Place</th>
        <th>Description</th>
        <!-- <th>Image</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.thing %></td>
          <td><%= post.place %></td>
          <td><%= render_with_hashtags(post.description) %></td>
          <!-- <td>imatd</td> -->
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
