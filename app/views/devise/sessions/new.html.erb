<div class="container background">
  <div class="row">
    <div class="render-signup">
      <%= link_to "登録", new_registration_path(resource_name), class: "btn btn-default signup-btn" %>
    </div>
    <div class="sign-menu animated fadeIn">
      <div class="app-title">
        <h2 class="" id="signup-title">Made in Recorder</h2>
      </div>
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" id="signin-form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <% if alert %>
              <div id="error_explanation">
                <p class="" role="alert"><%= alert %></p>
              </div>
            <% end %>
            <div class="field signin-field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>

            <div class="field sigin-field">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field remember-field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="actions signin-btn-field">
              <%= f.submit "ログイン", class: "btn btn-primary signin-submit" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(function(){
  	var num = Math.ceil(5 * Math.random());
  	$('div.background').addClass('background' + num);
  })
</script>
