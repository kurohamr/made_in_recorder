<%= form_with(model: @user, local: true, url: user_path, method: :put) do |user_form| %>

    <div class="field">
      <%= user_form.label :name %><br />
      <%= user_form.text_field :name %>
    </div>

    <div class="field">
      <%= user_form.label :introduction %><br />
      <%= user_form.text_area :introduction %>
    </div>

    <div class="field">
      <%= user_form.label :email %><br />
      <%= user_form.email_field :email %>
    </div>

    <div class="field">
      <%= user_form.label :password %>
      <%= user_form.password_field :password %>
    </div>

    <div class="field">
      <%= user_form.label :password_confirmation %><br />
      <%= user_form.password_field :password_confirmation %>
    </div>

    <div class="field">
      <%= user_form.label :place %><br />
      <%= user_form.text_field :place %>
    </div>

    <%= user_form.fields :asset do |asset_form| %>
      <div class="field">
        <%= asset_form.label :image %>
        <%= asset_form.file_field :image %>
      </div>
    <% end %>

    <%= user_form.fields :address do |address_form| %>
      <div class="field">
        <%= address_form.label :country %>
        <%= address_form.text_field :country %>
      </div>

      <div class="field">
        <%= address_form.label :state %>
        <%= address_form.text_field :state %>
      </div>

      <div class="field">
        <%= address_form.label :city %>
        <%= address_form.text_field :city %>
      </div>

      <div class="field">
        <%= address_form.label :address1 %>
        <%= address_form.text_field :address1 %>
      </div>

      <div class="field">
        <%= address_form.label :address2 %>
        <%= address_form.text_field :address2 %>
      </div>

      <div class="field">
        <%= address_form.label :address3 %>
        <%= address_form.text_field :address3 %>
      </div>

      <div class="field">
        <%= address_form.label :postcode %>
        <%= address_form.text_field :postcode %>
      </div>
    <% end %>

  <div class="actions">
    <%= user_form.submit %>
  </div>

<% end %>

<%= link_to "Back", posts_path %>
