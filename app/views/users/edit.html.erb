<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %><%= t('view.errors_count') %></h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row form-row">
  <%= form_with(model: @user, local: true, url: user_path, method: :put, class: "user-form-area col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1", html: { style: 'margin-top:30px;' }) do |user_form| %>
    <div class="row">
      <h2 class="edit-user-title">ユーザー編集</h2>

      <div class="field col-md-6">
        <%= user_form.label :name %>
        <%= user_form.text_field :name, class: "form-control", placeholder: "ユーザーネームを入力してください" %>
      </div>

      <div class="user-image-area col-md3">
        <% if @user.asset.image.present? %>
          <%= image_tag(@user.asset.image.url, id: :user_img_prev, size: "150x150",) %>
        <% else %>
          <%= image_tag("noimage.png" ,id: :user_img_prev, size: "150x150") %>
        <% end %>
      </div>

        <%= user_form.fields :asset do |asset_form| %>
          <div class="field col-md-6 col-md-offset-6">
            <%= asset_form.file_field :image, id: :user_img %>
            <%= asset_form.hidden_field :image_cache %>
          </div>
        <% end %>

      <div class="field col-md-6">
        <%= user_form.label :place %>
        <%= user_form.text_field :place, class: "form-control", placeholder: "位置を入力してください"%>
      </div>

      <div class="field col-md-8">
        <%= user_form.label :introduction %>
        <%= user_form.text_area :introduction, class: "form-control", placeholder: "自己紹介を入力してください" %>
      </div>

      <div class="field col-md-8">
        <%= user_form.label :email %>
        <%= user_form.email_field :email, class: "form-control", placeholder: "メールアドレスを入力してください" %>
      </div>

      <div class="field col-md-6">
        <%= user_form.label :password %>
        <%= user_form.password_field :password, class: "form-control" %>
      </div>

      <div class="field col-md-6">
        <%= user_form.label :password_confirmation %>
        <%= user_form.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="btns">
        <button class="btn btn-primary user-submit-btn" type="submit">保存する</button>
        <% link_to "保存する",  %>
        <%= link_to "戻る", posts_path, class: 'btn btn-default back-btn' %>
      </div>

    </div>
  <% end %>
</div>

<%= link_to "戻る", posts_path, class: 'btn btn-default' %>

<script type="text/javascript">
  $(function() {
   function readURL(input) {
     if (input.files && input.files[0]) {
       var reader = new FileReader();
       reader.onload = function (e) {
         $('#user_img_prev').attr('src', e.target.result);
       }
       reader.readAsDataURL(input.files[0]);
     }
   }
   $("#user_img").change(function(){
     readURL(this);
   });
  });
  </script>
